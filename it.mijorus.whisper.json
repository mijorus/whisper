{
    "app-id" : "it.mijorus.whisper",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "43",
    "sdk" : "org.gnome.Sdk",
    "command" : "whisper",
    "finish-args" : [
        "--share=ipc",
        "--share=network",
        "--socket=wayland",
        "--socket=pulseaudio",
        "--socket=fallback-x11",
        "--device=dri",
        "--device=all",
        "--system-talk-name=org.freedesktop.PolicyKit",
        "--talk-name=org.freedesktop.Flatpak"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [ 
        "python3-requirements.json",
        { 
            "name" : "whisper",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "dir",
                    "path" : "./"
                }
            ]
        }
    ]
}
